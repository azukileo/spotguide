<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link rel="stylesheet" href="/css/normalize.css" />
    <link rel="stylesheet" href="/css/foundation.min.css" />
    <link rel="stylesheet" href="/css/app.css" />
    <script src="/js/vendor/jquery.js"></script>
    <script type="text/x-handlebars-template"></script>
    <script type="text/javascript" src="/js/lib/underscore-min.js"></script>
    <script type="text/javascript" src="/js/lib/bootstrap.min.js"></script>
    <script type="text/javascript" src="/js/lib/handlebars.runtime.js"></script>
</head>
<body>

    <!-- Header and Nav -->

  <div class="row">
    <div class="large-12 columns">
      <div class="panel">
        <h1>Your Articles</h1>
      </div>
    </div>
  </div>

  <div class="row">

  <div class="large-12 columns">
    <div class="radius panel">

    <form method="post" action="/searchArticle">
      <div class="row collapse">

        <div class="large-10 small-8 columns">
          <input type="text" name="keyword"/>
        </div>

        <div class="large-2 small-3 columns">
          <a href="#" class="postfix button expand">Search</a>
        </div>

      </div>
    </form>

  </div>
  </div>

</div>

  <!-- End Header and Nav -->
  <div class="row">
 <!-- Nav Sidebar -->
    <!-- This is source ordered to be pulled to the left on larger screens -->
    <div class="large-3 columns ">
      <div class="panel">
        <a href="{{link}}"><img src="{{picture}}" /></a>
        <h5><a href="{{link}}">{{location}}</a></h5><br/>
          <div class="section-container vertical-nav" data-section data-options="deep_linking: false; one_up: true">

          <section class="section">
            <h5 class="title"><a href="/articles/list/japan">日本全体</a></h5>
          </section>
          <section class="section">
            <h5 class="title"><a href="/articles/list/hokkaido">北海道</a></h5>
          </section>
          <section class="section">
            <h5 class="title"><a href="/articles/list/tohoku">東北</a></h5>
          </section>
          <section class="section">
            <h5 class="title"><a href="/articles/list/kanto">関東</a></h5>
          </section>
          <section class="section">
            <h5 class="title"><a href="/articles/list/chubu">中部</a></h5>
          </section>
          <section class="section">
            <h5 class="title"><a href="/articles/list/kansai">関西</a></h5>
          </section>
          <section class="section">
            <h5 class="title"><a href="/articles/list/chugoku">中国</a></h5>
          </section>
          <section class="section">
            <h5 class="title"><a href="/articles/list/shikoku">四国</a></h5>
          </section>
          <section class="section">
            <h5 class="title"><a href="/articles/list/kyushu">九州</a></h5>
          </section>
        </div>

      </div>
    </div>

    <!-- Main Feed -->
    <!-- This has been source ordered to come first in the markup (and on small devices) but to be to the right of the nav on larger screens -->

    <div class="large-9 columns" role="content">
      {{#each articles}}
      <article>

        <h3><a href="#">{{title}}</a></h3>
        <h6>Written by <a href="#">{{name}}</a> on {{timeformat create_date}}</h6>

        <div class="row">
          <div class="large-6 columns">
            <img src="/uploads/fullsize/{{filename1}}"/>
          </div>
          <div class="large-6 columns">
            {{comment}}
          </div>
        </div>

      </article>

      <hr/>
      {{/each}}
    </div>
  </div>


  <!-- Footer -->

  <footer class="row">
    <div class="large-12 columns">
      <hr />
      <div class="row">
        <div class="large-5 columns">
          <p>© Copyright 2014 nsy inc. All Rights Reserved.</p>
        </div>
        <div class="large-7 columns">
          <ul class="inline-list right">
            <li><a href="#">Section 1</a></li>
            <li><a href="#">Section 2</a></li>
            <li><a href="#">Section 3</a></li>
            <li><a href="#">Section 4</a></li>
            <li><a href="#">Section 5</a></li>
            <li><a href="#">Section 6</a></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>

  <!-- foundation5プラグイン -->
  <script src="/js/foundation.min.js"></script>
  <script src="/js/vendor/modernizr.js"></script>
  <script src="/js/vendor/fastclick.js"></script>
  <script>$(document).foundation();</script>
</body>
</html>